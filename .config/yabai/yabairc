# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap

focus_first_window_in_space() {
  # Get the current space index
  local space_index=$(yabai -m query --spaces --space | jq '.index')

  # Focus the first window in the current space
  local window_id=$(yabai -m query --windows --space $space_index | jq '.[0].id')
  if [ "$window_id" != "null" ]; then
    yabai -m window --focus $window_id
  fi
}

# Add the function to the space_changed event
yabai -m signal --add event=space_changed action="focus_first_window_in_space"

